<form action="/users/login" method="POST" class="d-flex flex-column w-50 justify-content-center align-items-center">
    <h1 class="text-light">Login</h1>

    {{#if error}}
    <div class="alert alert-danger w-50 text-center">
        {{error}}
    </div>
    {{/if}}

    <input class="w-50 mt-1" type="email" name="email" id="email" placeholder="Email" required>
    <input class="w-50 mt-1" type="password" name="password" id="password" placeholder="Password" required>
    <button class="btn btn-outline-light mt-2" type="submit">Login</button>
    <p class="text-light mt-3">Don't have an account yet?</p>
    <a href="/users/register" class="btn btn-outline-light">Register</a>
</form>