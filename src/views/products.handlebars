<h2>Products</h2>
<section class="d-flex flex-wrap justify-content-evenly" >
  {{#each products}}
    
    <div class="card my-3" style="width: 18rem;">
        <h5 class="card-title text-center">{{this.category}}</h5>
        <h5 class="card-title">{{this.title}}</h5>
        <img src="{{this.photo}}" class="card-img-top"  alt="{{this.title}}">
        <div class="card-body"></div>
            <p class="card-text">Price: ${{this.price}}</p>
            <p class="card-text">Stock: {{this.stock}}</p>
            <a href="/products/{{this.id}}" class="btn btn-primary">Comprar</a>
        </div>
    </div>
  {{/each}}
</section>







